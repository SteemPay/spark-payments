<?xml version='1.0' encoding='utf-8'?>
<widget id="com.spark.terminal" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Spark Payments</name>
    <description>
        An external terminal for processing STEEM transactions in brick and mortar stores
    </description>
    <author email="kodaxx@gmail.com" href="http://kodaxx.github.io">
        kodaxx
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.5.4" />
    <engine name="android" spec="~7.0.0" />
    <plugin name="phonegap-nfc" spec="^0.7.1">
        <variable name="NFC_USAGE_DESCRIPTION" value="Read NFC Tags" />
    </plugin>
</widget>
